<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_beranda_proaccount_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="40dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/item_beranda_proaccount_item_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/item_beranda_proaccount_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="accountName"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSecondary"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/item_beranda_proaccount_item_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="accountJob"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/item_beranda_proaccount_item_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:drawableLeft="@drawable/ic_baseline_star_24"
                            android:drawableTint="@android:color/darker_gray"
                            android:gravity="center_vertical"
                            android:drawablePadding="4dp"/>

                        <TextView
                            android:id="@+id/item_beranda_proaccount_item_workingexp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 tahun"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:drawableLeft="@drawable/ic_baseline_work_24"
                            android:drawableTint="@android:color/darker_gray"
                            android:gravity="center_vertical"
                            android:drawablePadding="4dp"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line1"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/item_beranda_proaccount_item_ontime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 - 14:00"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:drawableLeft="@drawable/ic_baseline_access_time_24"
                    android:drawableTint="@android:color/darker_gray"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/item_beranda_proaccount_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 70.000"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_beranda_proaccount_item_btnchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat" />


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>